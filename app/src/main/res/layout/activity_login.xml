<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/flechgauche"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="60dp"
        android:src="@drawable/flech"/>
    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginStart="170dp"
        android:layout_marginTop="18dp"
        android:src="@drawable/son"/>
</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nomLogo"
        android:textStyle="bold"
        android:layout_marginTop="80dp"
        android:textSize="30dp"
        android:layout_marginStart="30dp"
        android:textColor="#FFA000"/>
    <EditText
        android:id="@+id/mailEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entry Your Email"
        android:inputType="textEmailAddress"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/icone_user"
        android:background="@drawable/edit_round"
        android:padding="20dp"
        />
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entry Your Password"
        android:inputType="textPassword"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp"
        android:drawableStart="@drawable/icone_user"
        android:background="@drawable/edit_round"
        android:padding="20dp"



        />

    <Button
        android:id="@+id/passwordd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="#FFA000"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <ProgressBar
        android:id="@+id/progressView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/verifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mot De Passe Or Email Incorect"
        android:layout_marginStart="60dp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="#D32F2F"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an acount ?"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/upp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="Sign up"
            android:textColor="#FFA000"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>